# Trading Platform Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# PostgreSQL (Trade Ledger)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_platform
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_SSL_MODE=prefer
POSTGRES_MAX_CONNECTIONS=20

# InfluxDB (Time Series Data)
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_ORG=trading_org
INFLUXDB_BUCKET=market_data
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_SSL=false

# MongoDB (Document Storage)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=trading_platform
MONGODB_USER=admin
MONGODB_PASSWORD=your_secure_mongodb_password_here
MONGODB_AUTH_SOURCE=admin
MONGODB_SSL=false

# Redis (Caching and Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
REDIS_SSL=false
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# EVENT STREAMING
# =============================================================================

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_SSL_CA_LOCATION=
KAFKA_SSL_CERTIFICATE_LOCATION=
KAFKA_SSL_KEY_LOCATION=

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Market Data Providers
POLYGON_API_KEY=your_polygon_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

# News Data Providers
NEWS_API_KEY=your_news_api_key_here
BENZINGA_API_KEY=your_benzinga_api_key_here

# LLM Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# BROKER INTEGRATIONS
# =============================================================================

# Alpaca Trading
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Interactive Brokers
IB_HOST=localhost
IB_PORT=7497
IB_CLIENT_ID=1
IB_ACCOUNT=your_ib_account_here

# =============================================================================
# SECURITY AND ENCRYPTION
# =============================================================================

# JWT and Session Management
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
SESSION_SECRET_KEY=your_session_secret_key_here

# Encryption Keys
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64
SALT=your_salt_here_16_bytes_base64

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_GATEWAY=localhost:9091

# Grafana
GRAFANA_API_KEY=your_grafana_api_key_here
GRAFANA_URL=http://localhost:3000

# =============================================================================
# CLOUD SERVICES (Optional)
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-trading-platform-bucket

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Azure
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here

# =============================================================================
# EMAIL AND NOTIFICATIONS
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_TLS=true

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#trading-alerts

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Testing Database (separate from production)
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_DB=trading_platform_test
TEST_POSTGRES_USER=test_user
TEST_POSTGRES_PASSWORD=test_password

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_ML_MODELS=true
ENABLE_LLM_ANALYSIS=true

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
NEWS_FETCH_INTERVAL_SECONDS=300
MARKET_DATA_RATE_LIMIT=1000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pools
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REDIS_POOL_SIZE=10

# Caching
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Processing
MAX_WORKER_THREADS=4
BATCH_SIZE=100
QUEUE_MAX_SIZE=10000

# =============================================================================
# SECURITY HEADERS AND CORS
# =============================================================================

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=Content-Type,Authorization

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
